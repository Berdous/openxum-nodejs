extends ../../../layouts/default

block head
    title Games

block neck
    link(rel='stylesheet', href='/views/index.min.css?#{cacheBreaker}')

block body
    if game=="dvonn"
        - var color_keys = ['black','white']
        - var colors = ['Black','White']
        - var default_color = 'black'
        - var mode_keys = [ 'regular' ]
        - var modes = [ 'Regular' ]
        - var default_mode = 'regular'
        - var type_keys = [ 'ai' ]
        - var types = [ 'AI' ]
        - var default_type = 'ai'
    if game=="tzaar"
        - var color_keys = ['black','white']
        - var colors = ['Black','White']
        - var default_color = 'black'
        - var mode_keys = [ 'regular' ]
        - var modes = [ 'Regular' ]
        - var default_mode = 'regular'
        - var type_keys = [ 'ai' ]
        - var types = [ 'AI' ]
        - var default_type = 'ai'
    if game=="gipf"
        - var color_keys = ['black','white']
        - var colors = ['Black','White']
        - var default_color = 'black'
        - var mode_keys = [ 'basic', 'standard', 'tournament' ]
        - var modes = [ 'Basic', 'Standard', 'Tournament' ]
        - var default_mode = 'basic'
        - var type_keys = [ 'ai' ]
        - var types = [ 'AI' ]
        - var default_type = 'ai'
    if game=="yinsh"
        - var color_keys = ['black','white']
        - var colors = ['Black','White']
        - var default_color = 'black'
        - var mode_keys = [ 'regular' , 'blitz' ]
        - var modes = [ 'Regular', 'Blitz' ]
        - var default_mode = 'regular'
        - var type_keys = [ 'online', 'ai' ]
        - var types = [ 'Online', 'AI' ]
        - var default_type = 'ai'
    if game=="kamisado"
        - var color_keys = [ 'black', 'white' ]
        - var colors = [ 'Black', 'White' ]
        - var default_color = 'black'
        - var mode_keys = [ 'simple' , 'standard', 'long', 'marathon' ]
        - var modes = [ 'Simple', 'Standard', 'Long', 'Marathon' ]
        - var default_mode = 'simple'
        - var type_keys = [ 'online', 'ai', 'remote_ai' ]
        - var types = [ 'Online', 'AI', 'Remote AI' ]
        - var default_type = 'ai'
    if game=="invers"
        - var color_keys = [ 'red', 'yellow' ]
        - var colors = [ 'Red', 'Yellow' ]
        - var default_color = 'red'
        - var mode_keys = [ 'standard' ]
        - var modes = [ 'Standard' ]
        - var default_mode = 'standard'
        - var type_keys = [ 'ai', 'remote_ai' ]
        - var types = [ 'AI', 'Remote AI' ]
        - var default_type = 'ai'
    if game=="zertz"
        - var color_keys = ['one','two']
        - var colors = ['One','Two']
        - var default_color = 'one'
        - var mode_keys = [ 'regular' , 'blitz' ]
        - var modes = [ 'Regular', 'Blitz' ]
        - var default_mode = 'regular'
        - var type_keys = [ 'ai' ]
        - var types = [ 'AI' ]
        - var default_type = 'ai'


    br
    div.row.vertical-offset-100
        div.col-md-8.col-md-offset-2
            div.panel.panel-primary
                div.panel-heading
                    h3(class='panel-title') New game [#{game}]
                div.panel-body
                    form(action='/games/create/',method='post')
                        div.form-group
                            div.input-group
                                span.input-group-addon
                                    span.glyphicon.glyphicon-tower
                                input.form-control(type="text", name="name", value="", placeholder="Game name")
                        div.form-group
                            fieldset
                                legend Color
                                each color,index in color_keys
                                    input(type="radio", name="color", value=color, checked=color==default_color)
                                    label.radio-inline #{colors[index]}
                                    &nbsp;&nbsp;
                        div.form-group
                            fieldset
                                legend Mode
                                each mode, index in mode_keys
                                    input(type="radio", name="mode", value=mode, checked=mode==default_mode)
                                    label.radio-inline #{modes[index]}
                                    &nbsp;&nbsp;
                        div.form-group
                            fieldset
                                legend Type
                                each type, index in type_keys
                                    input(type='radio',name='game_type',value=mode, checked=type==default_type)
                                    label.radio-inline #{types[index]}
                                    &nbsp;&nbsp;
                        input(type='hidden',name='game',value='#{game}')
                        input(type='submit',value='Create',class='btn btn-lg btn-success btn-block')